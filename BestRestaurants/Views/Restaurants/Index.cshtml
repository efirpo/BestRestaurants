@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>All Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurant listings have been added yet!</h3>
} 

@foreach (Restaurant rest in Model)
{
  <li>@Html.ActionLink($"{rest.Name}", "Details", new { id = rest.RestaurantId }) | @rest.Cuisine.Name</li>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>