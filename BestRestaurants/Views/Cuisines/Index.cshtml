@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>; // gives access to neccessary list of items

<h1>Cuisines</h1>

<ul>
  @foreach(Cuisine cuisine in Model)
  {
      <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li> //property names of the object we pass in {id = item.ItemId} MUST match parameter names used by the target method (Details())
  }
</ul>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 
<br>
<p>@Html.ActionLink("Add new cuisine", "Create")</p>